{
  "name": "iss-module/alpha-module",
  "require": {
    "php": ">=7.4",
    "ext-json": "^7.4",
    "laminas/laminas-mvc": "^3.3.3",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "laminas/laminas-test": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "AlphaModule\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AlphaModuleTest\\": "test/"
    }
  },
  "extra": {
    "laminas": {
      "component": "AlphaModule"
    }
  },
  "scripts": {
    "cover": "vendor/bin/phpunit --coverage-html .coverage",
    "csfix": "vendor/bin/phpcbf --standard=PSR12 ./src",
    "cs": "vendor/bin/phpcs --standard=PSR12 ./src",
    "test": "vendor/bin/phpunit --no-coverage"
  },
  "config": {
    "sort-packages": true
  }
}
